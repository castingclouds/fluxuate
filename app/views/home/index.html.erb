<% if user_signed_in? %>
  <div class="text-center py-12">
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow p-8">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white sm:text-5xl sm:tracking-tight lg:text-6xl">
        Welcome back, <%= current_user.email.split('@').first.capitalize %>!
      </h1>
      <p class="mt-5 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-100">
        You're now signed in to your Fluxuate account.
      </p>
      <div class="mt-8 flex justify-center space-x-4">
        <%= link_to 'View Profile', edit_user_registration_path, class: 'px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-700' %>
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-900 dark:text-white dark:border-gray-600' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-5xl lg:text-6xl">
        Welcome to Fluxuate
      </h1>
      <p class="mt-6 max-w-lg mx-auto text-xl text-gray-500 dark:text-gray-300">
        The modern way to manage your workflow and collaborate with your team.
      </p>
      <div class="mt-10 flex justify-center space-x-4">
        <%= link_to 'Get Started', new_user_registration_path, class: 'px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-800 md:py-4 md:text-lg md:px-10' %>
        <%= link_to 'Learn More', '#', class: 'px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-800 md:py-4 md:text-lg md:px-10' %>
      </div>
    </div>
  </div>

  <!-- Features -->
  <div class="py-12 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        <h2 class="text-base text-blue-600 dark:text-blue-300 font-semibold tracking-wide uppercase">Features</h2>
        <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          A better way to work
        </p>
      </div>

      <div class="mt-10">
        <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
          <!-- Feature 1 -->
          <div class="relative">
            <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div class="ml-16">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Lightning Fast</h3>
              <p class="mt-2 text-base text-gray-500">
                Experience blazing fast performance with our optimized stack and modern architecture.
              </p>
            </div>
          </div>

          <!-- Feature 2 -->
          <div class="relative">
            <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <div class="ml-16">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Secure by Default</h3>
              <p class="mt-2 text-base text-gray-500">
                Your data is protected with industry-standard security practices and encryption.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
